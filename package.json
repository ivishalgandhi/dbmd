{
  "name": "dbmd",
  "displayName": "DBMD: SQL Preview",
  "description": "Preview SQL queries in markdown files with SQLite and DuckDB support",
  "version": "1.0.8",
  "publisher": "gandhivishal",
  "author": {
    "name": "Vishal Gandhi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ivishalgandhi/dbmd.git"
  },
  "homepage": "https://github.com/ivishalgandhi/dbmd#readme",
  "bugs": {
    "url": "https://github.com/ivishalgandhi/dbmd/issues"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#2d2d2d",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=22.0.0"
  },
  "categories": [
    "Programming Languages",
    "Notebooks",
    "Formatters",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "sql",
    "preview",
    "sqlite",
    "duckdb",
    "database",
    "query",
    "visualization"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:dbmd.preview",
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dbmd.preview",
        "title": "Preview",
        "category": "DBMD",
        "enablement": "editorLangId == markdown"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "dbmd.preview",
          "when": "editorLangId == markdown",
          "group": "navigation@1"
        }
      ],
      "editor/title/context": [
        {
          "command": "dbmd.preview",
          "when": "editorLangId == markdown",
          "group": "1_open"
        }
      ],
      "commandPalette": [
        {
          "command": "dbmd.preview",
          "when": "editorLangId == markdown"
        }
      ]
    },
    "configuration": {
      "title": "DBMD",
      "properties": {
        "dbmd.defaultDatabaseType": {
          "type": "string",
          "default": "sqlite",
          "enum": [
            "sqlite",
            "duckdb"
          ],
          "description": "Default database type to use when not specified in frontmatter"
        }
      }
    },
    "markdown.markdownItPlugins": true
  },
  "scripts": {
    "watch": "echo 'Extension is JavaScript-based - no compilation needed. Press F5 to debug.'",
    "lint": "eslint .",
    "test": "echo 'No automated tests configured yet. Run manual tests via F5.' && exit 0",
    "package": "vsce package --out dist/",
    "publish": "vsce publish",
    "clean": "rm -rf dist/ node_modules/ *.vsix",
    "reinstall": "npm run clean && npm install"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "node-gyp": "^10.0.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "markdown-it": "^13.0.2"
  }
}
