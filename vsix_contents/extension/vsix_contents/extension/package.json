{
  "name": "dbmd",
  "displayName": "DBMD: SQL Preview",
  "description": "Preview SQL queries in markdown files with SQLite and DuckDB support",
  "version": "1.0.5",
  "publisher": "gandhivishal",
  "author": {
    "name": "Vishal Gandhi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ivishalgandhi/dbmd.git"
  },
  "homepage": "https://github.com/ivishalgandhi/dbmd#readme",
  "bugs": {
    "url": "https://github.com/ivishalgandhi/dbmd/issues"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#2d2d2d",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Notebooks",
    "Formatters",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "sql",
    "preview",
    "sqlite",
    "duckdb",
    "database",
    "query",
    "visualization"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:dbmd.preview",
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dbmd.preview",
        "title": "SQL Preview",
        "category": "DBMD",
        "enablement": "editorLangId == markdown"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "dbmd.preview",
          "when": "editorLangId == markdown",
          "group": "navigation@1"
        }
      ],
      "editor/title/context": [
        {
          "command": "dbmd.preview",
          "when": "editorLangId == markdown",
          "group": "1_open"
        }
      ],
      "commandPalette": [
        {
          "command": "dbmd.preview",
          "when": "editorLangId == markdown"
        }
      ]
    },
    "configuration": {
      "title": "DBMD",
      "properties": {
        "dbmd.defaultDatabaseType": {
          "type": "string",
          "default": "sqlite",
          "enum": ["sqlite", "duckdb"],
          "description": "Default database type to use when not specified in frontmatter"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "prepackage": "npm install",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "@vscode/sqlite3": "^5.1.6-vscode",
    "gray-matter": "^4.0.3",
    "markdown-it": "^13.0.2"
  }
}
